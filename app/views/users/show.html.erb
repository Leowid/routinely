<% provide(:title, @user.name) %>
<div class="wrapper">
  <div class="row profile">
    <aside class="span3 offset0">
      <section>
        <%= gravatar_for @user %>
        <h1>
          <%= @user.name %>
        </h1>
        <p>
        	<%= @user.bio %>
        </p>
        <p>
          <a href="https://twitter.com/<%= @user.twitter %>" class="twitter-follow-button" data-show-count="true" data-size="large">Follow @<%= @user.twitter %></a>
          <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
        </p>
      </section>
    </aside>
  </div>
  <div class="tasks">
      <% if @user.tasks.any? %>
        <h3> My daily routine </h3>
          <%= render @tasks %>
        <%= will_paginate @tasks %>
      <% end %>
    </div>
</div>
